<html lang="en-gb">
<%- include('_head') -%>
    <%- include('_header') -%>

        <body>
            <h1>Posts</h1>
            <ol>
                <% postList.results.forEach(function(post) {%>
                    <li>
                        <h2><%= post.postedBy.userName %></h2>
                        <%= post.userId %> - <%= post.message %> - <%= format(post.createdAt, "yyyy-MM-dd HH:mm:ss" ) %> - <%= post.imageUrl %>
                    </li>
                    <% }); %>
            </ol>
        </body>
        <%- include('_footer') -%>

</html>